<%- model_class = ModuleGroup.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:theme_id) %></th>
      <th><%= model_class.human_attribute_name(:module_group_code) %></th>
      <th><%= model_class.human_attribute_name(:module_group_description) %></th>
      <th><%= model_class.human_attribute_name(:audience) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @module_groups.each do |module_group| %>
      <tr>
        <td><%= module_group.theme.theme_code %></td>
        <td><%= link_to module_group.module_group_code, module_group_path(module_group) %></td>
        <td><%= module_group.module_group_description %></td>
        <td><%= module_group.audience %></td>
       <td><%= module_group.company_id.nil?     ? ''    : module_group.company.code %></td>
        <td>
	
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_module_group_path(module_group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      module_group_path(module_group),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_module_group_path,
            :class => 'btn btn-primary' %>
