<%- model_class = User.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:middle_name) %></th>
      <th><%= model_class.human_attribute_name(:last_name) %></th>
      <th><%= model_class.human_attribute_name(:user_code) %></th>
      <th><%= model_class.human_attribute_name(:acronym) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:email_status) %></th>
      <th><%= model_class.human_attribute_name(:recruited_at) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:department_id) %></th>
      <th><%= model_class.human_attribute_name(:academy_flag) %></th>
      <th><%= model_class.human_attribute_name(:manager_flag) %></th>
      <th><%= model_class.human_attribute_name(:trainer_flag) %></th>
      <th><%= model_class.human_attribute_name(:hierarchy_level) %></th>
      <th><%= model_class.human_attribute_name(:company_id) %></th>
      <th><%= model_class.human_attribute_name(:manager_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.id, user_path(user) %></td>
        <td><%= user.first_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.user_code %></td>
        <td><%= user.acronym %></td>
        <td><%= user.email %></td>
        <td><%= user.email_status %></td>
        <td><%= user.recruited_at %></td>
        <td><%= user.status %></td>
        <td><%= user.title %></td>
        <td><%= user.department_id %></td>
        <td><%= user.academy_flag %></td>
        <td><%= user.manager_flag %></td>
        <td><%= user.trainer_flag %></td>
        <td><%= user.hierarchy_level %></td>
        <td><%= user.company_id %></td>
        <td><%= user.manager_id %></td>
        <td><%=l user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_path(user),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_path,
            :class => 'btn btn-primary' %>
